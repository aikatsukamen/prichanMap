{
  "compilerOptions": {
    "outDir": "build",
    "module": "commonjs",
    "types": ["node"],
    "target": "esnext",
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "typeRoots": ["src/types", "node_modules/@types"]
  },
  "include": ["src/**/*", "scripts/**/*"],
  "exclude": ["node_modules", "build", "acceptance-tests", "webpack", "jest", "src/setupTests.ts"]
}
